<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CRUD</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://kit.fontawesome.com/95f68113d2.js"
      crossorigin="anonymous"
    ></script>

    <style>
      body {
        background-color: #909090;
      }
      .container {
        max-width: 600px;
      }
      .form-control {
        background: rgba(0, 0, 0, 0.33) !important;
        color: #fff !important;
        outline: none !important;
        box-shadow: none !important;
        border: none !important;
      }
      .form-control::placeholder {
        color: rgb(131, 131, 131);
      }
      .list-group-item {
        word-break: break-all;
        background-color: rgb(254, 255, 187);
        border: 2px solid;
      }
      .list-group-item .buttons {
        min-width: 90px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="display-3 text-center mb-4">Messages</h1>
      <form
        class="mb-3 d-flex justify-content-center align-items-center"
        action="/message"
        method="post"
      >
        <input
          type="text"
          name="message"
          id="msg"
          class="form-control d-inline"
          autocomplete="off"
          placeholder="Add message"
        />
        <input type="submit" value="Add" class="btn btn-outline-dark ms-2" />
      </form>
      <ul class="list-group">
        <% messages.forEach(message=>{ %>
        <li class="list-group-item d-flex justify-content-between">
          <span class="me-3"><%= message.data %></span>
          <span class="buttons">
            <a class="btn btn-warning edit-btn" href="/edit/<%= message._id %>">
              <i class="fa-solid fa-pen-to-square"></i>
            </a>
            <a class="btn btn-danger" href="/delete/<%= message._id %> ">
              <i class="fa-solid fa-trash-can"></i>
            </a>
          </span>
        </li>
        <% }) %>
      </ul>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script src="script.js"></script>
  </body>
</html>