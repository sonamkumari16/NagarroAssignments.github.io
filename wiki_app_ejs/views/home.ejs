<%- include("partials/header") %>
<h1 class="display-2 mt-3 mb-5">Welcome to Wiki App</h1>
<div class="container">
  <div class="input-group input-group-lg flex-nowrap">
    <input id="search-input" type="text" class="form-control" placeholder="Type to search..." autocomplete="off" onkeypress="pressEnter(event)" />
    <button class="btn btn-dark" type="button" id="search-btn" onclick="searchWiki()">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>
  </div>
</div>
<script>
  function searchWiki(){
    const searchText = document.getElementById('search-input').value;
    if(searchText!=="")
      window.location = `/${searchText}`;
  }
  
  function pressEnter(e){
    if(e.key==='Enter'){
      e.preventDefault();
      document.getElementById('search-btn').click();
    }
  }
</script>
